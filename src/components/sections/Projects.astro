---
import Section from '@/components/Section.astro';

import { projects } from '@cv';
---

<Section title="Proyectos">
  <ul>
    {
      projects.map(({ url, description, name, highlights, isActive }) => {
        return (
          <li>
            <article>
              <header>
                <a
                  href={url}
                  title={`Ver el proyecto ${name}`}
                >
                  <h3>{name}</h3>
                </a>
                <p>{description}</p>
              </header>
              <footer>
                <span>
                  {highlights.map((highlight) => {
                    return <li>{highlight}</li>;
                  })}
                </span>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background-color: #eee;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    display: inline-flex;
  }
</style>
