---
import Layout from "@/layouts/Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main>
    <a href="/#proyectos" class="a_back">Regresar</a>
    <h1>{title}</h1>

    <slot />
  </main>
</Layout>

<style is:global>
  .a_back {
    display: block;
    margin-bottom: 1rem;
    text-decoration: none;
  }

  .a_back:hover {
    text-decoration: underline;
  }

  main {
    width: 90%;
    padding: 2rem;
    margin: 0 auto;
  }

  h1 {
    margin-bottom: 1rem;
  }

  p {
    margin-bottom: 1rem;
  }

  .descripcion {
    font-size: 1rem;
  }

  .imagen {
    max-width: 100%;
    margin: 2rem auto;
  }

  @media (width >= 768px) {
    .imagen {
      max-width: 35%;
    }
  }

  .group-images {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1rem;
  }

  @media (width >= 768px) {
    .group-images {
      grid-template-columns: repeat(3, 1fr);
    }

    .group-images img {
      max-width: 100%;
    }
  }

  .enlace {
    text-decoration: underline;
  }
</style>
